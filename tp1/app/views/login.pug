extends layout 
block content 
    .w3-card-4 
        header.w3-indigo
            h1 Login Form 

        form.w3-container(action="/users/login" method="POST")
            fieldset 
                legend Introduza as credenciais de autenticação 
                label Username 
                input.w3-input(type="text" name="username" required)
                label Password 
                input.w3-input(type="password" name="password" required)

                if error
                   p Erro na autenticação do utilizador 
            input.w3-btn.w3-blue(type="submit" value="Login")
            a(href="register") Registar

        footer.w3-indigo 
            address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]