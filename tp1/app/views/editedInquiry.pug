extends header

block content
  .w3-card-4 
    header.w3-container-w3-teal
      h1 Inquirição modificada por #{i.editor}
    .w3-container
        fieldset
            legend Metadata
            label #[b Id da Inquirição: ] #{i.UnitId}
            br
            label #[b Titular(es): ] #{i.UnitTitle}
            br
            label #[b Afiliações: ] #{i.filiations}
            br
            label #[b Local de nascimento: ] #{i.birthplace}
            br
            label #[b Concelho de residência: ] #{i.current_concelho}
            br
            label #[b Distrito de residência: ] #{i.current_district}
            br
            label #[b Laços pessoais: ]
            .w3-container
              each relation in i.relations_id
                b #{relation.name}
                br
                label #[b Relação] : #{relation.type}
                br
                a(href="/inquiry/"+relation.id) link
                br
            br
            - let initDate = new Date(i.UnitDateInitial).toISOString().substring(0,10)
            - let finalDate = new Date(i.UnitDateFinal).toISOString().substring(0,10)
            label #[b Data de produção inicial: ] #{i.UnitDateInitial}
            br
            label #[b Confiança na data: ] #{i.UnitDateInitialCertainty}
            br
            label #[b Data de produção final: ] #{i.UnitDateFinal}
            br
            label #[b Confiança na data: ] #{i.UnitDateFinalCertainty}
            br
            label #[b AllowUnitDatesInference: ] #{i.AllowUnitDatesInference}
            br
            label #[b Dimensões: ] #{i.Dimensions}
            br
            label #[b Acesso restrito: ] #{i.AccessRestrict}
            br
            label #[b Localização física: ] #{i.PhysLoc}
            br
            label #[b Localização anterior: ] #{i.PreviousLoc}
            br
            label #[b PhysTech: ] #{i.PhysTech}
            br
            label #[b Material relacionado: ] #{i.RelatedMaterial}
            br
            label #[b Nota: ] #{i.Note}
            br
            label #[b Revisto: ] #{i.Revised}
            br
            label #[b Publicado: ] #{i.Published}
            br
            label #[b Disponível: ] #{i.Available}
            br
            label #[b Criado por: ] #{i.Creator}
            br
            label #[b Data de criação: ] #{i.Created}
            br
            label #[b Editado por: ] #{i.Username}
            br
            label #[b Data de informação do processo: ] #{i.ProcessInfoDate}
            br
            label #[b Informação do processo: ] #{i.ProcessInfo}
            br
    form.w3-container(action="/editedInquiry/reject/"+i._id method="POST")
      input.w3-btn.w3-blue(type="submit" value="Rejeitar")
    form.w3-container(action="/editedInquiry/accept/"+i._id method="POST")
      input.w3-btn.w3-blue(type="submit" value="Aceitar")

    footer.w3-indigo 
      address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]