extends header

block content
    .w3-card-4 
    header.w3-container-w3-teal
      h1 Perfil de Utilizador
    .w3-container
        form.w3-container(action="editProfile" method="POST" enctype='multipart/form-data')
            fieldset
                legend Dados de utilizador
                label #[b Username: ] #{user.username}
                br
                if(user.level === 1)
                    label #[b Level: ] Admin
                    br
                label #[b Email: ] 
                input.w3-input(type="email" name="email" value=user.email)
                br
                label #[b Filiação: ] #{user.filiation}
                input.w3-input(type="text" name="filiation" value=user.filiation)
                br
                label #[b Imagem de perfil: ] #{user.filiation}
                input.w3-input(type="file" name="profilePic" value=user.profilePicDir accept="image/*")
                br
            a(href='profile') Cancelar
            input.w3-btn.w3-blue(type="submit" value="Confirmar")

    footer.w3-indigo 
      address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]