extends layout 
block content 
    .w3-card-4 
        header.w3-indigo
            h1 Registo 

        form.w3-container(action="/users/register" method="POST")
            fieldset 
                legend Introduza as credenciais de autenticação 
                label Username 
                input.w3-input(type="text" name="username" required)
                label Password 
                input.w3-input(type="password" name="password" required)
                label Confirme Password 
                input.w3-input(type="password" name="confirm_password" required)

            input.w3-btn.w3-blue(type="submit" value="Register")
        footer.w3-indigo 
            address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]