extends header

block content
  .w3-card-4 
    header.w3-container-w3-teal
      h1 Criar Inquirição
    .w3-container
        form.w3-container(action="/createInquiry" method="POST")
            fieldset
              legend Metadata
              label #[b UnitTitle: ]
              input.w3-input(type="text" name="UnitTitle" required)
              br
              label #[b birthplace: ]
              input.w3-input(type="text" name="birthplace" required)
              br
              label #[b current_concelho: ]
              input.w3-input(type="text" name="current_concelho" required)
              br
              label #[b current_district: ]
              input.w3-input(type="text" name="current_district" required)
              br
              label #[b relations_id: ]
              .w3-container(id='relationsContainer')
                button.w3-btn.w3-blue(type="button" id="addRelationBtn" onclick="addRelationForm()") +

              br
              a.w3-btn.w3-blue(name="cancel" href='/') Cancelar
              input.w3-btn.w3-blue(type="submit" name="submit" value="Submeter inquiricao") 
              br

    footer.w3-indigo 
      address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]
      