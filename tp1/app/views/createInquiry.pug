extends header

block content
  .w3-card-4 
    header.w3-container-w3-teal
      h1 Criar Inquirição
    .w3-container
        form.w3-container(action="/createInquiry" method="POST" enctype='multipart/form-data')
            fieldset
              legend Metadata
              label #[b Imagem de inquérito: ]
              input.w3-input(type="file" name="inquiryPic" accept="image/*")
              br
              label #[b Titular *: ]
              input.w3-input(type="text" name="UnitTitle" required)
              br
              label #[b Filiações: ]
              .w3-container(id='affiliationsContainer')
                button.w3-btn.w3-blue(type="button" id="addAffiliationBtn" onclick="addAffiliationForm()") +

              br
              label #[b Data de nascimento: ]
              input.w3-input(type="date" name="birthdate" max=today)
              br
              label #[b Local de nascimento: ]
              input.w3-input(type="text" name="birthplace")
              br
              label #[b Concelho de residência: ]
              input.w3-input(type="text" name="current_concelho")
              br
              label #[b Distrito de residência: ]
              input.w3-input(type="text" name="current_district")
              br
              label #[b Laços Pessoais: ]
              .w3-container(id='relationsContainer')
                button.w3-btn.w3-blue(type="button" id="addRelationBtn" onclick="addRelationForm()") +

              br
              label #[b Data de produção inicial *: ]
              input.w3-input(type="date" name="UnitDateInitial" max=today required)
              br
              label #[b Data de produção final *: ]
              input.w3-input(type="date" name="UnitDateFinal" max=today  required)
              br

              label #[b Localização física: ]
              input.w3-input(type="text" name="PhysLoc")
              br
              label #[b Localização anterior: ]
              input.w3-input(type="text" name="PreviousLoc")
              br
              label #[b Material relacionado: ]
              input.w3-input(type="text" name="RelatedMaterial")
              br

              a.w3-btn.w3-blue(name="cancel" href='/') Cancelar
              input.w3-btn.w3-blue(type="submit" name="submit" value="Submeter inquiricao") 
              br

    footer.w3-indigo 
      address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]
      