extends layout

block head
    body
      .w3-card-4
        header.w3-container.w3-teal
            .w3-row
                if username
                    .w3-col
                        h1 User : #{username}
                    .w3-col
                        a(href="/users/profile") Profile

                if (logged === false || !logged)
                    .w3-col
                        a(href="/users/login") Login
                if logged === true
                    .w3-col 
                        a(href="/users/logout") Logout
                if (logged === false || !logged)
                    .w3-col
                        a(href="/users/register") Register