extends header

block content
    #page-container
      #content-wrap
        .w3-container
          br
          .w3-card-4(style="width:40%; margin:auto; overflow:hidden") 
            .w3-container.w3-center.main-color
              h1 Perfil de #{user.username}
            br
            .w3-container.w3-center
              img.profile-picture(src=user.profilePicDir alt='Profile Picture')
            br
            .w3-container
              h4 #[b Informações do utilizador]
              label #[b Username: ] #{user.username}
              br
              if(user.level === 1)
                label #[b Level: ] Admin
                br
              label #[b Email: ] #{user.email}
              br
              if user.affiliations
                label #[b Filiações: ]
                ul 
                  each affiliation in user.affiliations
                    li
                      if affiliation.process
                        a(href='/inquiry/'+affiliation.process) #{affiliation.name}
                      else
                        p #{affiliation.name}
                      br
                      if affiliation.relation
                        label #[b Relação : ] #{affiliation.relation}
              - let dateCreated = user.dateCreated ? new Date(user.dateCreated).toISOString().substring(0,10) : ''
              label #[b Registo: ] #{dateCreated}
            br
            .w3-container.w3-center
              a.colored.main-button(href='editProfile') Editar Informações
            br

        footer.main-color.w3-center
          address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]