extends header

block content
    .w3-card-4 
    header.w3-container-w3-teal
      h1 User profile
    .w3-container
        fieldset
            legend Dados de utilizador
            label #[b Username: ] #{user.username}
            br
            if(user.level === 1)
                label #[b Level: ] Admin
                br
            label #[b Email: ] #{user.email}
            br
            label #[b Filiações: ]
            ul 
                each filiation in user.filiations
                    li
                        if filiation.process
                            a(href='/inquiry/'+filiation.process) #{filiation.name}
                        else
                            p #{filiation.name}
                        br
                        if filiation.relation
                            label #[b Relação : ] #{filiation.relation}
                    
            br
            - let dateCreated = user.dateCreated ? new Date(user.dateCreated).toISOString().substring(0,10) : ''
            label #[b Registo: ] #{dateCreated}
            br
            img(src=user.profilePicDir alt='Profile Picture')
            br
        a(href='editProfile') Editar

    footer.w3-indigo 
      address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]