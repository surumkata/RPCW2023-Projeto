extends header

block content
    .w3-card-4 
    header.w3-container-w3-teal
      h1 User profile
    .w3-container
        fieldset
            legend Dados de utilizador
            label #[b Username: ] #{user.username}
            br
            if(user.level === 1)
                label #[b Level: ] Admin
                br
            label #[b Email: ] #{user.email}
            br
            label #[b Filiação: ] #{user.filiation}
            br
            label #[b Registo: ] #{user.dateCreated}
            br
        a(href='editProfile') Editar

    footer.w3-indigo 
      address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]