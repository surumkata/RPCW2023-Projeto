extends layout

block content
  .w3-card-4 
    header.w3-container-w3-teal
      h1 Inquirições
      p Podes fazer as seguintes operações:
        ul.w3-ul
          if logged === false
            li 
              a(href="/users/login") Login
          if logged === true
            li 
              a(href="/users/logout") Logout
          if logged === false
            li
              a(href="/users/register") Register
          li
            a(href="/protegida") Only for authorized users
    .w3-container
        table
          th
            if(page > 0)
              - let previousPage = page-1 
              p #[a(href="/?page="+previousPage) previous]
          th
            - let nextPage = page + 1
            p #[a(href="/?page="+nextPage) next]

    .w3-container
      table.w3-table-all
        tr
          th ID 
          th _ID
          th Pessoa
          th
        each i in is
          tr
            td=i.ID 
            td=i._id
            td
              each person in i.UnitTitle
                p=person
            td
              a(href="/inquiry/"+i._id) Inquirição

      .w3-container
        table
          th
            if(page > 0)
              p #[a(href="/?page="+previousPage) previous]
          th
            p #[a(href="/?page="+nextPage) next]

    footer.w3-indigo 
      address Generated by auth:RPCW2023 #{d}
