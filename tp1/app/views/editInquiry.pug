extends header

block content
  .w3-card-4 
    header.w3-container-w3-teal
      h1 Editar Inquirição
    .w3-container
        form.w3-container(action="inquiry/"+i._id+"/edit" method="POST")
            fieldset
                legend Metadata
                label #[b id: ] #{i._id}
                br
                label #[b UnitId: ] #{i.UnitId}
                br
                label #[b UnitTitle: ] #{i.UnitTitle}
                br
                label #[b birthplace: ]
                input.w3-input(type="text" name="birthplace" value=i.birthplace)
                br
                label #[b current_concelho: ] #{i.current_concelho}
                input.w3-input(type="text" name="current_concelho" value=i.current_concelho)
                br
                label #[b current_district: ] #{i.current_district}
                input.w3-input(type="text" name="current_district" value=i.current_district)
                br
                label #[b relations_id: ] #{i.relations_id}
                input.w3-input(type="text" name="relations_id" value=i.relations_id)
                br

    footer.w3-indigo 
      address Generated by auth:RPCW2023 #{d} | #[a(href="/") Voltar]